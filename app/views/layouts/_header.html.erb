<div>
  <ul class="navbar">
    <li><%= link_to 'HOME', root_path %></li>

    <% if session[:guide_id] %>
      <li><%= link_to 'PROFILE', guide_path(session[:guide_id]) %></li>
      <li><%= link_to 'INBOX', mail_conversations_path %></li>
      <li><%= link_to 'LOG OUT', sessions_path, method: :delete, data: { confirm: 'Are you sure?'} %></li>
