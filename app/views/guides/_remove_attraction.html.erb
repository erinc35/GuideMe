<div class="attraction">
  <img src="<%= attraction.image_url %>" alt="edit" />
  <a href="<%=attraction.url%>" target="_blank" class="event-name"><%= attraction.name %></a>
  <%= link_to 'Add', yelps_add_path(session[:traveler_id], attraction: attraction.name, location: @location), method: :post, id: 'add_attraction', class: "add-remove-but" %>
  <div class="address">
    <%= attraction.location.display_address[0] +" "+ attraction.location.display_address[-1]%></div>
     <a href="#"  class="click-detail">Show details ▼</a>
    <a href="#" class="hide-detail">Hide details ▲</a>

    <%= render partial: '/partials/saved_detail_attractions', locals: { attraction: attraction} %>
</div>
