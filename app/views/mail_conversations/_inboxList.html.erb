<div class = "mailList" >
  <% if @mailbox_conversations.count <= 0 %>
  <h4>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"You have no messages."
  </h4>
  <% else %>
  <ul>
    <form action="/mail_conversations/trashing" method="post">
    <% @mailbox_conversations.each do |email|  %>
    <div class = "mailItem">
      <li>
       <input id="email[]" name="email[<% email.id %>]" type="checkbox" value="<%= email.id %>" />
        <%= link_to email.subject, mail_conversation_path(email)%>
        <%= email.updated_at.strftime("%m/%d/%Y") %>
      </li>
    </div>
    <% end %>
    <button type="submit" class="glyphicon glyphicon-trash", type="submit">
  </form>
  </ul>
</div>
<% end %>
